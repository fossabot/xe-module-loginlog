<query id="getMemberPassword" action="select">
	<tables>
		<table name="member" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="equal" column="user_id" var="user_id" />
		<condition operation="equal" column="email_address" var="email_address" pipe="or"/>
	</conditions>
</query>
